@page
@model cw1.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
         <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
    <div class="container">
        <div>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et pariatur incidunt blanditiis deserunt hic nam illum asperiores dolorem architecto! Nostrum odit ex in deserunt rerum reiciendis quam soluta sequi neque.
        </div>
        <div>
            @{
                string imie = "Roman";
                string nazwisko = "Gronek";
                int a = 345;
                int b = 3;
                int wynik = a*b;
            }
            Moje dane @imie @nazwisko wynik: @wynik
        </div>
        <div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Lp</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Wiek</th>
            </tr>
            @{int i=0;}
            @foreach (var c in Model.Customers)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@c.FirstName</td>
                    <td>@c.LastName</td>
                    <td>@c.Age</td>
                </tr>
            }
        </table>
        <hr>
        <h2 class="bg-secondary p-3">
            Ilość klientów: @Model.Customers.Count <br>
            Średnia wieku klientów: @Model.AgeAvg <br>
            Najstarszy klient: @Model.Customers.Max(c=>c.Age) <br>
            Najmłodszy klient @ViewData["min"]

        </h2>
    </div>
    <div><a class="btn btn-primary" asp-page="MyForm">Przejście do formularza</a></div>
    </div>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    </body>
</html>