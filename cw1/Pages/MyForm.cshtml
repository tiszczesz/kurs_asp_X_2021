@page
@model MyApp.Namespace.MyFormModel
@{
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
         <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
    <div class="container">
        <div class="info">
            @ViewData["get"] <br>
            @ViewData["post"] <br>
            @if(ViewData["post"]!=null && ViewData["wynik"]!=null){
                <span>Wynik = @ViewData["wynik"]</span>
            }
        </div>
        <form method="post">
            <div class="form-group">
                <label for="a">Podaj a: </label>
                <input class="form-control" type="number" name="a" id="a">
            </div>
            <div class="form-group">
                <label for="b">Podaj b: </label>
                <input class="form-control" type="number" name="b" id="b">
            </div>
            <div><input class="btn btn-primary" type="submit" value="Oblicz"></div>
        </form>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    </body>
</html>
