@model IEnumerable<Cupcake>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/css/cupcakes-styles.css"/>
    <title>Index</title>
</head>
<body>
<div class="container">
    <div class="main-title">
        <p class="into">Witamy w Sklepie Pychotka</p>
        <button onclick="location.href = '@Url.Action("Create", "Cupcake")'">Nowe ciastko</button>
    </div>
    <div class="img-container">
        @foreach (var item in Model) {
            <div class="photo-index-card">
                <h3 class="display-picture-title">
                    " @Html.DisplayFor(modelItem => item.CupcakeType) "
                </h3>
                @if (item.ImageName != null) {
                    <img class="photo-display-img" 
                         src="@Url.Action("GetImage","Cupcake",new {Id=item.CupcakeId})"/>
                }
            </div>
        }

    </div>
</div>
</body>
</html>